{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>tksst/renovate-config",
    "schedule:automergeDaily"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Dockerfile/"
      ],
      "matchStrings": [
        "\\nARG NVM_VER=(?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "nvm-sh/nvm"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile"
      ],
      "matchPackageNames": [
        "ubuntu"
      ],
      "matchDepTypes": [
        "final"
      ],
      "matchUpdateTypes": [
        "digest"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "matchPackageNames": [
        "ghcr.io/tksst/devcontainers/devcontainer-base"
      ],
      "matchDepTypes": [
        "final"
      ],
      "matchUpdateTypes": [
        "digest"
      ],
      "automerge": true
    }
  ]
}
